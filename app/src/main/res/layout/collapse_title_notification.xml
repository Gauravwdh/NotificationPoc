<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tool="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:background="@color/white"
                android:orientation="vertical">

    <include layout="@layout/notification_icon"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="8dp"
        android:layout_toRightOf="@+id/layout_image"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/title"
                style="@style/notification_two_line_title"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@+id/time"
                tool:text="Title of the simple asdh asd iashd i asdias dhias dia"/>

            <TextView
                android:id="@+id/time"
                style="@style/notification_time"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                tool:text="9:00 pm "/>

        </RelativeLayout>

        <TextView
            android:id="@+id/content"
            style="@style/notification_one_line_content"
            android:layout_marginRight="8dp"
            tool:text="content of notification can extend askd huahsd i saidh"/>


    </LinearLayout>


</RelativeLayout>